/* components/list-categorys/list-categorys.wxss */
.item{
    display: flex;
    height: 150rpx;
    padding: 10rpx;
    border-bottom: 1rpx solid rgb(218, 218, 218); 
    border-width: 1rpx;
}

.item image{
    width: 150rpx;
    height: 150rpx;
}

.name {
    border-bottom: 1rpx solid rgb(218, 218, 218); 
    height: 40%;

}

.info {
    display: flex;
    padding: 0 50rpx;
    height: 100%;
    flex-direction: column;
    min-width: 40%;
}

.tags {
    height: 60%;
    display: flex;
    align-items: center;
}

.btn {
    margin: 0 30rpx 0 0;
}