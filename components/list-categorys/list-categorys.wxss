/* components/list-categorys/list-categorys.wxss */
.item{
    display: flex;
    width: 1fr;
    height: 150rpx;
    align-items: center;
    padding: 10rpx;
    border-bottom-style: solid;
    border-width: 1rpx;
}

.item image{
    width: 120rpx;
    height: 120rpx;
}

.info {
    display: flex;
    padding-left: 30rpx;
    width: 400rpx;
    height: 120rpx;
    flex-direction: column;
    justify-content: space-between;
}


.tags {
    width: max-content;
    justify-content: space-between;
}