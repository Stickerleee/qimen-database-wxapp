/* components/base-info-card/base-info-card.wxss */
.base-info {
    max-width: 100%;
    display: flex;
    height: 200rpx;
}

.image {
    max-width: 30%;
    max-height: 250rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.base-info-text {
    padding: 0 40rpx;
    width: 100%;
    
}

.name {
    border-bottom: 1rpx solid rgb(218, 218, 218); 
}

.item-name {
    font-size: 40rpx;
	font-weight: bold;
}

.tags {
    padding: 20rpx 0;
    min-width: 50%;
    display: flex;
}

.mini-btn {
    margin: 0 30rpx 0 0;
}