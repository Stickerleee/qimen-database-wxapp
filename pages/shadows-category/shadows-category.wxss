.weui-tabs-bar__content{
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.tab-bar-title__selected {
    font-weight: bold;
}

/* 无法自适应高度，设定一个硬高度 */
.tab-class {
    height: 95%;
}

.tab-content {
    display: grid;
    grid-template-columns: auto auto auto;
    grid-gap: 40rpx;
    padding: 30rpx;
}
