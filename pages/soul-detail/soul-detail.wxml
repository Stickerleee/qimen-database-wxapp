<!--pages/soul-detail/soul-detail.wxml-->
<!-- 神魂详情页 -->
<view class="container">
    <view class="info-card">
        <base-info-card icon="{{curItem.icon}}" name="{{curItem.name}}" property="{{curItem.property}}" divinatory="{{curItem.divinatory}}" tags="{{curItem.tags}}"></base-info-card>
        <view class="effect-info">
            <view class="second-title">神魂效果</view>
            <text>两件效果：{{curItem.effect}}</text>
            <text>三件效果：{{curItem.effect}}</text>
            <view class="second-title">阶级效果</view>
            <text>每阶级：xxxx</text>
            <text>20阶级：xxxxx</text>
            <text>60阶级：xxxxx</text>
            <view class="second-title">满阶效果</view>
            <text>xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</text>
        </view>
        <view class="soul-show">
            <view class="second-title">神魂展示</view>
            <view class="soul-card" wx:for="{{['pic0','pic1','pic2']}}" wx:key="pic">
                <image src="{{curItem[item]}}"></image>
                <view class="soul-detail">
                    <text>一级属性：</text>
                    <text>xxxxxxxxxxxxxxxxxxxxx</text>
                    <text>满级属性：</text>
                    <text>xxxxxxxxxxxxxxxxxxxxx</text>
                </view>
            </view>
        </view>
    </view>
</view>
