/* pages/soul-detail/soul-detail.wxss */
.info-card {
    width:100%;
}

.effect {
    display: flex;
    flex-direction: column;
}

.info-text {
    padding: 40rpx 20rpx;
    display: grid;
    grid-template-columns: auto auto;
}

#step-effect {
    padding: 50rpx 100rpx;
}

.effect-info {
    display: flex;
    flex-direction: column;
}

.soul-card {
    display: grid;
    padding: 20rpx 0;
    height: 500rpx;
    grid-template-columns: 30% 70%;
}
.soul-detail {
    display: flex;
    flex-direction: column;
    max-width: 100%;
    align-items: center;
    justify-content: center;
    padding: 0 10%;
}