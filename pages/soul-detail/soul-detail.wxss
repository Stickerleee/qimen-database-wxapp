/* pages/soul-detail/soul-detail.wxss */
.info-card {
    width:100%;
    height: 500rpx;
}

.base-info {
    width: 100%;
    display: flex;
}

.base-image image{
    width: 200rpx;
    height: 200rpx;
}

.base-info-text {
    padding-left: 50rpx;
}

.name {
    height: 100rpx;
}
.item-name {
    font-size: xx-large;
}

.tags {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
}

.second-title {
    text-align: center;
    border-bottom-style: solid;
    border-width: 1rpx;
    padding: 10rpx 0;
}
.second-title text {
    margin-bottom: 30rpx;
}

.effect-info {
    display: flex;
    flex-direction: column;
}

.soul-card image {
    width:250rpx;
    height:400rpx;
    padding: 30rpx;
}

.soul-card {
    display: flex;
}
.soul-detail {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    justify-content: center;
}