/* pages/simulator/simulator.wxss */

/* 详情页遮罩及数据  */
.detail-background {
    position: absolute;
    z-index: 9999;
    height: 100vh;
    width: 100vw;
    background-color: rgba(0, 0, 0, 0.4);
}


.detail-tab {
    background-color: white;
    margin: 0 30rpx;
}

.detail-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx 50rpx;
}

.base-info {
    width: 100%;
    display: flex;
}

.base-info-image {
    height: 150rpx;
    width: 150rpx;
}

.tab-button {
    display: grid;
    grid-template-columns: auto auto;
    border-top: 1rpx solid black;
}

/* 页面内容 */
.page-container {
    background-color: #F2F2F2;
}

.card {
    display: flex;
    flex-direction: column;
    max-width: 100%;
    background-color: white;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
}

.title {
    padding: 0 32rpx;
}

.mini-card {
    padding: 0 32rpx;
    margin: 16rpx 0;
}


.flex-btw {
    display: flex;
    justify-content: space-between;
}

.flex-cent {
    display: flex;
    align-items: center;
    justify-content: center;
}

.weapon-selector {
}

.shadow-img {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 20rpx;
    width: 100%;
    align-items: center;
}

.shadow-unit {
    align-items: center;
    width: 100%;
    border-bottom: 1rpx solid black;
}


.selector {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100%;
    max-width: 130rpx;
}

#selector-large {
    height: 120rpx;
    width: 120rpx;
}

#selector-normal {
    height: 100rpx;
    width: 100rpx;
}

#selector-circle {
    height: 80rpx;
    width: 80rpx;
    border-radius:40rpx;
}

.img {
    height: 120rpx;
    width: 120rpx;
}

.grey-bg {
    background-color: rgba(212, 212, 212, 0.678);
    height: 100%;
    width: 100%;
}

.tab-bar-class{
    padding: 10rpx 20rpx;
}

.tab-class {
    height: 320rpx;
    padding: 20rpx 0;
}

.tab-container {
    display: grid;
    grid-template-columns: auto auto auto auto auto;
}

.mini-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx;
}

.mini-img {
    height: 100rpx;
    width: 100rpx;
}