/* pages/simulator/simulator.wxss */

/* 详情页遮罩及数据  */
.detail-background {
    position: absolute;
    z-index: 9999;
    height: 100vh;
    width: 100vw;
    background-color: rgba(0, 0, 0, 0.5);
}

.detail-container {
    padding: 24rpx;
    min-width: 80vw;
}

.detail-category {
    display: grid;
    grid-template-columns: repeat(5, auto);
    grid-gap: 24rpx;
}

.weapon-cate {
    padding: 16rpx 0;
    display: grid;
    grid-template-columns: repeat(6, auto);
    grid-gap: 24rpx;
}

.weapon-cate:last-child {
    border-bottom: 0px;
}

.base-info {
    width: 100%;
    display: flex;
    height: 150rpx;
}

.tab-effect {
    display: flex;
    flex-direction: column;
    margin: 32rpx 0 0 0;
}

.tab-effect-info {
    padding: 0 24rpx;
}

.tab-button {
    display: grid;
    grid-template-columns: auto auto;
    border-top: 1rpx solid rgba(0, 0, 0, 0.1);
    padding: 15rpx;
}

/* 页面内容 */
.container {
    background-color: #F2F2F2;
    min-width: 100vw;
    min-height: 100vh;
}



.remove-img {
    width: 32rpx;
    height: 32rpx;
}

.mini-card {
    /* padding: 0 32rpx; */
    margin: 16rpx 0;
}


.shadow-img {
    display: flex;
    justify-content: space-around;
    width: 100%;
    align-items: center;
}

.shadow-unit {
    align-items: center;
    width: 100%;
    padding: 15rpx;
}


.selector {
    min-height: 100%;
    max-width: 120rpx;
}

#selector-large {
    height: 120rpx;
    width: 120rpx;
}

#selector-normal {
    height: 100rpx;
    width: 100rpx;
}

#selector-circle {
    height: 80rpx;
    width: 80rpx;
    border-radius: 40rpx;
}

.selector-text {
    max-width: 100rpx;
    text-align: center;
    text-overflow: ellipsis;
    /*文本裁切 显示省略号*/
    white-space: nowrap;
    /*强制文本不换行*/
    overflow: hidden;
    /*溢出文本隐藏*/
}

.img {
    height: 120rpx;
    width: 120rpx;
}

.grey-bg {
    background-color: rgba(0, 0, 0, 0.05);
    border-radius: 10rpx;
}

.tab-bar-class {
    padding: 10rpx 20rpx;
}

.tab-active-class {
    font-size: 17px;
    font-weight: bold;
}

.tab-class {
    height: 300rpx;
    padding: 20rpx 0 0 0;
}

.tab-container {
    display: grid;
    grid-template-columns: repeat(5, auto);
    grid-gap: 10rpx;
}

.count {
    background-color: #F2F2F2;
}

.mini-img {
    height: 80rpx;
    width: 80rpx;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 40rpx;
    border: 4rpx solid;
}

.tiny-img {
    max-height: 64rpx;
    max-width: 64rpx;
    border-radius: 32rpx;
    border: 3rpx solid;
    background-color: rgba(0, 0, 0, 0.1);
}