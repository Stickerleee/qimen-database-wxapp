.info-text {
    padding: 20rpx 0;
    margin: 0rpx 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: 1rpx solid rgb(218, 218, 218); 
    flex-direction: column;
  }

  .with-icon {
    width: 100%;
    display: grid;
    grid-template-columns: max-content auto;
  }

  #inner-text {
    border-bottom: 0rpx;
    align-items: flex-start;
  }



