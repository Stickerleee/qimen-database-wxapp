.icon-container {
	height: 100%;
	display: flex;
	align-items: center;
}


.lock-effect-icon {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 120rpx;
	width: 120rpx;
	border: 1rpx solid black;
	font-size: 50rpx;
	font-weight: bold;
}