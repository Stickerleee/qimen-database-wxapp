                </view>
                <view class="switch" wx:if="{{type!=='weapon'}}">
                    <switch checked="{{switchMaxStack}}" bindchange="switchChangeStack"/>
                    <text>满叠加/献祭：</text>
                    <text>{{stackUpdata}}</text>
                </view>
            </view>
            <view class="info-text">
                {{maxEffect}}
            </view> -->
        </view>
        <view class="effect" wx:if="{{type!=='weapon'}}">
            <view class="second-title">满叠加/献祭效果</view>
            <view class="effect-card">
                <view class="effect-text">
                    <text wx:for="{{stackUpdata}}" wx:key="stack">{{item}}</text>
                </view>
            </view>
        </view>
    </view>
    <view class="lockEffect" wx:if="{{lockEffect}}">
        <view class="second-title">解封效果</view>
        <block wx:for="{{lockEffect}}" wx:for-index="lockIdx">
            <view class="lock-effect-card effect-card">
                <view class="lock-effect-icon">
                    {{greatNum[lockIdx]}}
                </view>
                <view class="effect-text">
                    <text>{{item}}</text>
                </view>
            </view>
        </block>
    </view>
</view>
