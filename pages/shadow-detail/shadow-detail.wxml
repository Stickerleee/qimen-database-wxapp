<!--pages/shadow-detail/shadow-detail.wxml-->
<!-- weapons 和 shadows共用的详情页 -->
<view class="container">
    <view class="base-info">
        <base-info-card icon="{{icon}}" name="{{name}}" property="{{property}}" divinatory="{{divinatory}}" tags="{{tags}}"/>
    </view>
    <view class="advanced-info">
        <view class="effect">
            <view class="second-title" id="spec-effect">装备效果</view>
            <view class="effect-card">
                <view class="effect-icon">
                    <image src="{{baguaIcon}}" mode="heightFix" style="max-height:100%; max-width:100%;"/>
                </view>
                <view class="effect-text">
                    <text wx:for="{{effect}}" wx:key="effect">{{item}}</text>
                    <block wx:if="{{vipProp}}" wx:for="{{vipProp}}" wx:key="vipProp">
                        <text>\n</text>
                        <text>{{item}}</text>
                    </block>
                </view>
            </view>
        </view>
        <view class="effect">
            <view class="second-title">满强化效果</view>
            <view class="effect-card">
                <view class="effect-text">
                    <text wx:for="{{effectUpdata}}" wx:key="updata">{{item}}</text>
                </view>
            </view>
