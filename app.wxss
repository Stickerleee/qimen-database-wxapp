/**app.wxss**/
.container {
  padding: 15rpx 25rpx;
  display: block;
  display: flex;
  flex-direction: column;
} 
.effect-card {
  box-shadow: 3px 3px 7px #888888;
  margin: 20rpx 0;
}

.effect {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
}

.second-title {
  border-left-style: solid;
  border-width: 10rpx;
  margin: 20rpx 20rpx;
  padding: 0 20rpx;
  font-weight: bolder;
}

.second-title text {
  margin-bottom: 30rpx;
}

/* 格式化样式 */
.full-flex {
  height: 100%;
  width: 100%;
}

.flex-btw {
  display: flex;
  justify-content: space-between;
}

.flex-cent {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-col {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-head-title {
  font-size: 22px;
  font-weight: bold;
}

.text-title {
  font-size: 20px;
  font-weight:bold;
}
.text-sec-title {
  font-size: 17px;
  font-weight:bold;
}

.text-desc {
  font-size: 12px;
  opacity: 0.5;
}

.text-caution {
  color: #AC1F0D;
}

.text-text {
  font-size: 17px;
}

.border-bottom {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}